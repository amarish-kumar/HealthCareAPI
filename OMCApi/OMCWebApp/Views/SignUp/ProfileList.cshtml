@model  OMCWebApp.Models.ProfileListModel
@{
    ViewBag.Title = "Profile List";
}
<style>
    table, th, td {
        border: 1px solid black;
        align-content: center;
        margin-left: 5px;
        margin-right: 5px;
    }
</style>
<h2>Profile List</h2>

@{
    if (Model.Profiles != null)
    {
        <table style="">
            <thead>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Date of Birth</th>
                <th>Relationship</th>
                <th>Gender</th>
                <th>Is Default</th>
                <th>Action</th>
            </thead>

            @foreach (var profile in Model.Profiles)
            {
                <tr>
                    <td>@profile.FirstName</td>
                    <td>@profile.LastName</td>
                    <td>@profile.DOB</td>
                    <td>@Html.DropDownListFor(m => profile.RelationshipId, new SelectList(Model.Relationships, "Id", "Description"))</td>
                    <td>@Html.DropDownListFor(m => profile.GenderId, new SelectList(Model.Genders, "Id", "GenderName"))</td>
                    <td>@Html.CheckBoxFor(m => profile.IsDefault)</td>
                    <td>
                        @Html.ActionLink("Update Profile", "UpdateProfile", "SignUp", new { userId = Model.UserId }, null)
                    </td>
                </tr>
            }
        </table>
    }
}
