@model  OMC.Models.UserLogin

<h2>Login here</h2>
@using (Html.BeginForm("Signin", "Login"))
{

    @Html.AntiForgeryToken()
    <table>
        <tr>
            <td>
                User Name:
            </td>
            <td>
                @Html.TextBoxFor(m => m.Username, new { style = "width: 300px;" })
            </td>
        </tr>
        <tr style="height:20px;"></tr>
        <tr>
            <td>
                Password:
            </td>
            <td>
                @Html.PasswordFor(m => m.Password, new { style = "width: 300px;" })
            </td>
        </tr>
        <tr style="height:20px;"></tr>
        <tr>
            <td>
                IP Address:
            </td>
            <td>
                @Html.TextBoxFor(m => m.IPAddress, new { style = "width: 300px;" })
            </td>
        </tr>
        <tr style="height:20px;"></tr>
        <tr>
            <td colspan="2">
                <button type="submit">Signin</button>
            </td>
        </tr>

    </table>
    <br />
    @Html.ActionLink("Patient SignUp", "Index", "SignUp")
    <br />
    @Html.ActionLink("CSR SignUp", "CSRSignUp", "SignUp")
    <br />
    @Html.ActionLink("Doctor SignUp", "DoctorSignUp", "SignUp")
    <br />
    @Html.ActionLink("Unregistered Patient Enquiry", "PatientEnquiry", "Login")
}



