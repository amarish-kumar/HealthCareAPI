@model  OMCWebApp.Models.IllegalDrugDetailsModel

@using (Html.BeginForm("InsertUpdateConsultationIllegalDrugDetail", "Consultation", FormMethod.Post))
{
    <h2>Create Illegal Drug Detail</h2>
    @Html.AntiForgeryToken()
    <table class="createIllegalDrugDetail">
        <tr>
            <td>
                Do you consume Drugs? :
            </td>
            <td>
                @Html.CheckBoxFor(m => m.ConsultationIllegalDrugDetailsObject.ConsumeDrugs, Model.ConsultationIllegalDrugDetailsObject.ConsumeDrugs)
            </td>
        </tr>
        <tr style="height:20px;"></tr>
        <tr>
            <td>
                Name of drug:
            </td>
            <td>
                @Html.HiddenFor(m => m.ConsultationIllegalDrugDetailsObject.AddedBy, Model.ConsultationIllegalDrugDetailsObject.AddedBy)
                @Html.HiddenFor(m => m.ConsultationIllegalDrugDetailsObject.ConsultationId, Model.ConsultationIllegalDrugDetailsObject.ConsultationId)
                @Html.DropDownListFor(m => m.ConsultationIllegalDrugDetailsObject.IllegalDrugsID, new SelectList(Model.IllegalDrugDetails, "ID", "Description"))
            </td>
        </tr>
        <tr style="height:20px;"></tr>
        <tr>
            <td>
                Others (not found in list):
            </td>
            <td>
                @Html.TextBoxFor(m => m.ConsultationIllegalDrugDetailsObject.OtherDescription, Model.ConsultationIllegalDrugDetailsObject.OtherDescription)
            </td>
        </tr>
        <tr style="height:20px;"></tr>
        <tr>
            <td>
                Frequency of consumption:
            </td>
            <td>
                @Html.DropDownListFor(m => m.ConsultationIllegalDrugDetailsObject.Frequency, (IEnumerable<SelectListItem>)ViewBag.DDLItems)
                @*<select id="@Model.ConsultationIllegalDrugDetailsObject.Frequency" name="@Model.ConsultationIllegalDrugDetailsObject.Frequency">
                    <option value="">---Select Value---</option>
                    <option value="Daily">Daily</option>
                    <option value="Weekly">Weekly</option>
                    <option value="Socially">Socially</option>
                </select>*@
            </td>
        </tr>
        <tr style="height:20px;"></tr>
        <tr>
            <td>
                Frequency of intake:
            </td>
            <td>
                @Html.TextBoxFor(m => m.ConsultationIllegalDrugDetailsObject.PerFrequency, Model.ConsultationIllegalDrugDetailsObject.PerFrequency)
            </td>
        </tr>
        <tr style="height:20px;"></tr>
        <tr>
            <td colspan="2">
                <button type="submit">Create Consultation Illegal Drugs details</button>
            </td>
        </tr>
    </table>
}
