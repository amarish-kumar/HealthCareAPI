@model  OMCWebApp.Models.ConsultationObjectiveNoteModel

@using (Html.BeginForm("InsertUpdateConsultationObjectiveNotes", "Consultation", FormMethod.Post))
{
    <h2>Manage Consultation Objective Note</h2>
    @Html.AntiForgeryToken()
    <table class="createConsAllergy">
        <tr>
            <td>
                Notes:
            </td>
            <td>
                @Html.HiddenFor(m => m.ConsultationObjectiveNotesObject.Id, Model.ConsultationObjectiveNotesObject.Id)
                @Html.HiddenFor(m => m.ConsultationObjectiveNotesObject.AddedBy, Model.ConsultationObjectiveNotesObject.AddedBy)
                @Html.HiddenFor(m => m.ConsultationObjectiveNotesObject.ModifiedBy, Model.ConsultationObjectiveNotesObject.ModifiedBy)
                @Html.HiddenFor(m => m.ConsultationObjectiveNotesObject.ConsultationObjectiveId, Model.ConsultationObjectiveNotesObject.ConsultationObjectiveId)
                @Html.TextBoxFor(m => m.ConsultationObjectiveNotesObject.Notes
                , Model.ConsultationObjectiveNotesObject.Notes)
            </td>
        </tr>
        <tr style="height:20px;"></tr>
        <tr>
            <td>
                Timestamp:
            </td>
            <td>
                @Html.TextBoxFor(m => m.ConsultationObjectiveNotesObject.Timestamp, "{0:yyyy-MM-ddThh:mm:ss}"
               , new { @class = "form-control", type = "datetime-local" })

            </td>
        </tr>
        <tr style="height:20px;"></tr>
        <tr>
            <td>
                Doctor:
            </td>
            <td>
                @Html.DropDownListFor(m => m.ConsultationObjectiveNotesObject.DoctorId
                , new SelectList(Model.Doctors, "Id", "FirstName"))
            </td>
        </tr>
        <tr style="height:20px;"></tr>
        <tr>
            <td colspan="2">
                <button type="submit">
                    @(Model.ConsultationObjectiveNotesObject.Id == 0 ? "Create Consultation Objective Note" : "Update Consultation Objective Note")
                </button>
            </td>
        </tr>
    </table>
}
