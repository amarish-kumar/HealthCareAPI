@model  OMCWebApp.Models.OccupationModel

@using (Html.BeginForm("InsertUpdateConsultationOccupation", "Consultation", FormMethod.Post))
{
    <h2>Create Consultation Occupation</h2>
    @Html.AntiForgeryToken()
    <table class="createConsAllergy">
        <tr>
            <td>
                Occupation:
            </td>
            <td> 
                @Html.HiddenFor(m => m.ConsultationOccupationObject.AddedBy, Model.ConsultationOccupationObject.AddedBy)
                @Html.HiddenFor(m => m.ConsultationOccupationObject.ConsultationId, Model.ConsultationOccupationObject.ConsultationId)
                @Html.DropDownListFor(m => m.ConsultationOccupationObject.OccupationId, new SelectList(Model.OccupationList, "Id", "Description"))
            </td>
        </tr> 
        <tr style="height:20px;"></tr>
        <tr>
            <td>
                Others (not found in list):
            </td>
            <td>
                @Html.TextBoxFor(m => m.ConsultationOccupationObject.OtherDescription, Model.ConsultationOccupationObject.OtherDescription)
            </td>
        </tr>
        <tr style="height:20px;"></tr>
        <tr>
            <td colspan="2">
                <button type="submit">Create Consultation Occupation</button>
            </td>
        </tr>
    </table>
}

