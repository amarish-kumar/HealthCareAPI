@model  OMCWebApp.Models.DoctorBoardModel

@using (Html.BeginForm("InsertUpdateDoctorBoard", "Doctor", FormMethod.Post))
{
    <h2>Manage Doctor Board</h2>
    @Html.AntiForgeryToken()
    <table class="createConsAllergy">
        <tr>
            <td>
                Licensed in:
            </td>
            <td>
                @Html.DropDownListFor(m => m.DoctorBoardObject.BoardId
                , new SelectList(Model.BoardList,"Id", "DisplayName"))            
            </td>
        </tr>    
        <tr style="height:20px;"></tr>
        <tr>
            <td>
                Other Description:
            </td>
            <td> 
                @Html.HiddenFor(m => m.DoctorBoardObject.Id, Model.DoctorBoardObject.Id)
                @Html.HiddenFor(m => m.DoctorBoardObject.AddedBy, Model.DoctorBoardObject.AddedBy)
                @Html.HiddenFor(m => m.DoctorBoardObject.ModifiedBy, Model.DoctorBoardObject.ModifiedBy)
                @Html.HiddenFor(m => m.DoctorBoardObject.DoctorId, Model.DoctorBoardObject.DoctorId)
                @Html.TextBoxFor(m => m.DoctorBoardObject.OtherDescription, Model.DoctorBoardObject.OtherDescription)
            </td>
        </tr>        
        <tr style="height:20px;"></tr>       
        <tr>
            <td colspan="2">
                <button type="submit">
                    @(Model.DoctorBoardObject.Id == 0 ? "Create Doctor Board" : "Update Doctor Board")
                </button>
            </td>
        </tr>
    </table>
}
