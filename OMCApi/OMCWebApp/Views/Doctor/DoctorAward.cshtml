@model  OMCWebApp.Models.DoctorAwardModel

@using (Html.BeginForm("InsertUpdateDoctorAward", "Doctor", FormMethod.Post))
{
    <h2>Manage Doctor Award</h2>
    @Html.AntiForgeryToken()
    <table class="createConsAllergy">
        <tr>
            <td>
                Year Received:
            </td>
            <td>
                @Html.TextBoxFor(m => m.DoctorAwardObject.YearReceived, Model.DoctorAwardObject.YearReceived)            
            </td>
        </tr>    
        <tr style="height:20px;"></tr>
        <tr>
            <td>
                Institution Name:
            </td>
            <td> 
                @Html.HiddenFor(m => m.DoctorAwardObject.Id, Model.DoctorAwardObject.Id)
                @Html.HiddenFor(m => m.DoctorAwardObject.AddedBy, Model.DoctorAwardObject.AddedBy)
                @Html.HiddenFor(m => m.DoctorAwardObject.ModifiedBy, Model.DoctorAwardObject.ModifiedBy)
                @Html.HiddenFor(m => m.DoctorAwardObject.DoctorId, Model.DoctorAwardObject.DoctorId)
                @Html.TextBoxFor(m => m.DoctorAwardObject.InstitutionName, Model.DoctorAwardObject.InstitutionName)
            </td>
        </tr>
        <tr style="height:20px;"></tr>
        <tr>
            <td>
                Award Name:
            </td>
            <td>
                @Html.TextBoxFor(m => m.DoctorAwardObject.AwardName, Model.DoctorAwardObject.AwardName)
            </td>
        </tr>
        <tr style="height:20px;"></tr>       
        <tr>
            <td colspan="2">
                <button type="submit">
                    @(Model.DoctorAwardObject.Id == 0 ? "Create Doctor Award" : "Update Doctor Award")
                </button>
            </td>
        </tr>
    </table>
}